---
import BlogCard from '@/components/BlogCard.astro'
import Link from '@/components/Link.astro'
import PageHead from '@/components/PageHead.astro'
import ProfileCard from '@/components/ProfileCard.astro'
import { buttonVariants } from '@/components/ui/button'
import { SITE } from '@/consts'
import Layout from '@/layouts/Layout.astro'
import { getRecentPosts } from '@/lib/data-utils'

const blog = await getRecentPosts(SITE.featuredPostCount)
---

<Layout class="max-w-3xl">
  <PageHead slot="head" title="Home" />
  <div class="flex items-stretch gap-4">
    <section class="flex-1 rounded-lg border">
      <div class="flex flex-col space-y-1.5 p-6">
        <h3 class="text-3xl leading-none font-medium">0xGunn</h3>
        <p class="text-muted-foreground text-sm">
          Security • Blue Team • DFIR • RE • OSINT
        </p>
      </div>
      <div class="p-6 pt-0">
        <p class="text-muted-foreground mb-2 text-sm">
          Welcome to my corner of the internet. I share hands-on writeups,
          notes, and practical workflows around <span
            class="text-foreground font-medium">Blue Team</span
          >{' '}
          operations: SOC triage, threat hunting, detection engineering, incident
          response, and introductory malware analysis.
        </p>
        <p class="text-muted-foreground text-sm">
          If you're new here, start with the <Link
            href="/blog/blue-team-roadmap"
            class="text-foreground"
            underline
          >
            Blue Team Roadmap
          </Link>{' '}
          and then browse the latest posts below. You can also find me on{' '}
          <Link
            href="https://github.com/0xGunn"
            class="text-foreground"
            external
            underline
          >
            GitHub
          </Link>{' '}
          for tools, labs, and code.
        </p>
      </div>
    </section>
    <ProfileCard
      class="hidden md:block"
      image="https://gravatar.com/userimage/247370179/21b9bf87085d2c1dd8334caf63c88266.jpeg?v=1769335148000&size=256"
      quote="Security researcher, blue teamer, and continuous learner."
    />
  </div>

  <section class="flex flex-col gap-y-4">
    <h2 class="text-2xl font-medium">Latest posts</h2>
    <ul class="flex flex-col gap-y-4">
      {
        blog.map((post) => (
          <li>
            <BlogCard entry={post} />
          </li>
        ))
      }
    </ul>
    <div class="flex justify-center">
      <Link
        href="/blog"
        class={buttonVariants({ variant: 'ghost' }) + ' group'}
      >
        See all posts <span
          class="ml-1.5 transition-transform group-hover:translate-x-1"
          >&rarr;</span
        >
      </Link>
    </div>
  </section>
</Layout>
